@model IEnumerable<VaultLifeAdmin.Models.Product>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductSKUCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SOH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableSOH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExclusive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contract.ContractCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner.OwnerCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.terms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSKUCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SOH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvailableSOH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExclusive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contract.ContractCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.OwnerCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.terms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.link)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
