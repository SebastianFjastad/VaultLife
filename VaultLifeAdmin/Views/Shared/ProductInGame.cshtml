@model IEnumerable<VaultLifeAdmin.ViewModels.ProductInGameViewModel>

@{
    ViewBag.Title = "Edit";
    int count = 0;
}

@foreach(var p in Model)
{
    count = p.ProductInGame.ProductInGameID;
<tr>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("ProductInGame.ProductInGameID[" + @count++ + "]", p.ProductInGame.ProductInGameID)
    @Html.Hidden("ProductInGame.DateInserted[" + @count++ + "]", p.ProductInGame.DateInserted)
    @Html.Hidden("ProductInGame.DateUpdated[" + @count++ + "]", p.ProductInGame.DateUpdated)
    @Html.Hidden("ProductInGame.USR[" + @count++ + "]", p.ProductInGame.USR)
    @Html.Hidden("ProductInGame.GameID[" + @count++ + "]", p.ProductInGame.GameID)
   

   
    
    <td>
        <div class="col-md-10">
            @Html.Display(p.ProductInGame.Game.GameCode)

        </div>
    </td>
    <td>
            <div class="col-md-10">
                                
                @Html.DropDownList("ProductInGame.SelectedProductID[" + @count++ + "]", new SelectList(p.Products, p.SelectedProductID))
            </div>
        </td>

    

    <td>
     
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductInGame.Quantity, new { htmlAttributes = new { @class = "form-control" } })
     
            @Html.ValidationMessage("QuantityError", new { @class = "text-danger" })
        </div>
    </td>
    <td>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductInGame.PriceInGame, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("PriceInGameError", "", new { @class = "text-danger" })
        </div>
    </td>
    <td>

        <div class="col-md-10">
            @Html.DropDownList("CurrencyID", (SelectList)ViewBag.CurrencyIDList, String.Empty, htmlAttributes: new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.ProductInGame.CurrencyID, "", new { @class = "text-danger" })
        </div>
</td>

    

  


</tr>
