                @Html.EditorFor(model => model.TerritoryName)
                @Html.ValidationMessageFor(model => model.TerritoryName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TerritoryDescription, new { @class = "control-label col-md-2" })
