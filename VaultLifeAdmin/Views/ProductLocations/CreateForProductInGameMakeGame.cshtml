@model VaultLifeAdmin.Models.ProductLocation

@{
    ViewBag.Title = "Create";
    VaultLifeAdmin.Models.ProductInGame pig = (VaultLifeAdmin.Models.ProductInGame)ViewBag.ProductInGame;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProductLocation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Hidden("ProductInGameID", (object)@ViewBag.ProductInGameID)

        <div class="form-group">
            <label class="control-label col-md-2">Product in Game</label>
            <div class="col-md-10">

                <label class="form-control">@pig.Product.ProductName</label>

                <label class="form-control">@pig.Game.GameCode</label>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryAgentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeliveryAgentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeliveryAgentName, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.DateInserted)
        @Html.HiddenFor(model => model.DateUpdated)
        @Html.HiddenFor(model => model.USR)

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
