                @Html.ValidationMessageFor(model => model.LanguageID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageItemKey, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LanguageItemKey)
                @Html.ValidationMessageFor(model => model.LanguageItemKey)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageItemValue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LanguageItemValue)
                @Html.ValidationMessageFor(model => model.LanguageItemValue)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
