@using Vaultlife.Models
@using Vaultlife.Helpers
@using Microsoft.AspNet.Identity;
@{
    String viewPath = ((RazorView)ViewContext.View).ViewPath;
    bool isHome = viewPath.Equals("~/Views/Home/Index.cshtml");
    bool isSignUp = viewPath.Equals("~/Views/Account/RegisterFull.cshtml");
    bool isLogin = viewPath.Equals("~/Views/Account/Login.cshtml");
    bool isProductLayout = viewPath.Equals("~/Views/Product/ViewProduct.cshtml");

    String statusStyle = "";
    String memberSubs = "";

    Member currentMember = null;
    
    if (Request.IsAuthenticated) {
        currentMember = MemberHelper.GetLoggedInMember(User.Identity.GetUserName(), new VaultLifeApplicationEntities());

        if (currentMember.MemberSubscriptionTypeID == 6) //check if users subscription level is platinum
        {
            statusStyle = "navbar-platinum";
        }

        

        switch(currentMember.MemberSubscriptionTypeID)
         {
              case 4:   memberSubs = "silver";
                  break;
              case 5:   memberSubs = "gold";
                  break;
              case 6:   memberSubs = "platinum";
                  break;
              default:  memberSubs = "bronze";
                  break;
         }
        

    }


}

