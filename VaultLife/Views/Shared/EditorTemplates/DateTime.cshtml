<style>
.datepicker {
    font-family: "Lato","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 15px;
    line-height: 1.42857;
    color: black;
}
.timepicker
 {
    font-family: "Lato","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 15px;
    line-height: 1.42857;
    color: black;
}

</style>
<div class='input-group date' id="@Html.IdForModel()" data-date-format="YYYY/MM/DD">
   <span class="input-group-sm">
      @Html.TextBox("", Model.HasValue ? Model.Value.ToString("yyyy/MM/dd") : String.Empty, new { @class = "form-control" })

   </span>
</div>
<script type="text/javascript">
    $(function () {
        // target only the input in this editor template
        $('#@Html.IdForModel()').datetimepicker({
            pickTime: false,

            
        });
    });
</script>

